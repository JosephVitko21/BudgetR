<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dashTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/budgetR"
        android:textSize="18sp"

        app:layout_constraintBottom_toTopOf="@+id/holder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="450dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dashTitle" />

    <Spinner
        android:id="@+id/hometimespin"
        android:layout_width="65dp"
        android:layout_height="37dp"
        android:entries="@array/planets_array"
        app:layout_constraintBottom_toTopOf="@+id/holder"
        app:layout_constraintEnd_toEndOf="@+id/holder"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/holder"
        app:layout_constraintTop_toBottomOf="@+id/dashTitle"
        app:layout_constraintVertical_bias="0.46" />

    <Spinner
        android:id="@+id/hometimespin2"
        android:layout_width="65dp"
        android:layout_height="37dp"
        android:entries="@array/planets_array"
        app:layout_constraintBottom_toBottomOf="@+id/holder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/holder"
        app:layout_constraintTop_toBottomOf="@+id/current2"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/current1"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:text="This "
        app:layout_constraintBottom_toTopOf="@+id/holder"
        app:layout_constraintEnd_toStartOf="@+id/hometimespin"
        app:layout_constraintHorizontal_bias="0.737"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dashTitle"
        app:layout_constraintVertical_bias="0.458" />

    <TextView
        android:id="@+id/current2"
        android:layout_width="123dp"
        android:layout_height="21dp"
        android:text="  you have spent. "
        app:layout_constraintBottom_toBottomOf="@+id/holder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintStart_toEndOf="@+id/hometimespin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.683" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recent Expenses"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/holder" />
</androidx.constraintlayout.widget.ConstraintLayout>